  <library value="Library/ScreeningEligible|1.0.0"/>
  <action id="ScreeningEligible">
    <title value="Screening Eligible"/>
    <description value="Patient is eligible for screening"/>
    <code>
      <coding>
        <system value="http://cancerscreeningcds.github.io/crcsm-cds/CodeSystem/plan-definition-action-code-system"/>
        <code value="eligible"/>
        <display value="Eligible for screening"/>
      </coding>
    </code>
    <documentation>
      <type value="citation"/>
      <label value="USPSTF (2021)"/>
      <display value="Screening for Colorectal Cancer: US Preventive Services Task Force Recommendation Statement"/>
      <citation value="US Preventive Services Task Force. Screening for Colorectal Cancer: US Preventive Services Task Force Recommendation Statement. JAMA. Published online May 18, 2021."/>
      <url value="https://www.uspreventiveservicestaskforce.org/uspstf/recommendation/colorectal-cancer-screening"/>
      <document>
        <url value="https://www.uspreventiveservicestaskforce.org/uspstf/recommendation/colorectal-cancer-screening"/>
      </document>
    </documentation>
    <condition>
      <kind value="applicability"/>
      <expression>
        <language value="text/cql-identifier"/>
        <expression value="CheckIsIncludedAndNotExcluded"/>
      </expression>
    </condition>
    <condition>
      <kind value="applicability"/>
      <expression>
        <language value="text/cql-identifier"/>
        <expression value="IsScreeningEligible"/>
      </expression>
    </condition>
    <definitionCanonical value="http://cancerscreeningcds.github.io/crcsm-cds/ActivityDefinition/CommunicateEligible|1.0.0"/>
  </action>
  <action id="Not Screening Eligible">
    <title value="Not Screening Eligible"/>
    <description value="Patient is not eligible for screening"/>
    <code>
      <coding>
        <system value="http://cancerscreeningcds.github.io/crcsm-cds/CodeSystem/plan-definition-action-code-system"/>
        <code value="noteligible"/>
        <display value="Not eligible for screening"/>
      </coding>
    </code>
    <condition>
      <kind value="applicability"/>
      <expression>
        <language value="text/cql-identifier"/>
        <expression value="CheckIsIncludedAndNotExcluded"/>
      </expression>
    </condition>
    <condition>
      <kind value="applicability"/>
      <expression>
        <language value="text/cql-identifier"/>
        <expression value="IsNotScreeningEligible"/>
      </expression>
    </condition>
    <definitionCanonical value="http://cancerscreeningcds.github.io/crcsm-cds/ActivityDefinition/CommunicateNotEligible|1.0.0"/>
    <dynamicValue>
      <path value="reasonCode[0].coding[0]"/>
      <expression>
        <language value="text/cql-identifier"/>
        <expression value="ScreeningEligibleReason"/>
      </expression>
    </dynamicValue>
  </action>
  <action id="Screening Eligible Missing Data">
    <title value="Screening Eligible Missing Data"/>
    <description value="Top level action that defines missing data for inclusion and exclusion."/>
    <documentation>
      <type value="documentation"/>
      <label value="Inclusions"/>
      <display value="Error due to missing required data"/>
    </documentation>
    <trigger>
      <type value="named-event"/>
      <name value="encounter-start"/>
    </trigger>
    <condition>
      <kind value="applicability"/>
      <expression>
        <language value="text/cql-identifier"/>
        <expression value="MissingAgeOrBirthdate"/>
        <reference value="Library/ScreeningEligible|1.0.0"/>
      </expression>
    </condition>
    <definitionCanonical value="http://cancerscreeningcds.github.io/crcsm-cds/Questionnaire/ScreeningEligibleQuestionnaire|1.0.0"/>
  </action>
